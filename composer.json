{
    "name": "batumibiz/captcha",
    "description": "mobiCMS, Captcha package",
    "type": "library",
    "homepage": "https://github.com/batumibiz/captcha",
    "license": "MIT",
    "keywords": [
        "mobicms",
        "captcha"
    ],
    "require": {
        "php": "^7.2",
        "ext-gd": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Batumibiz\\Captcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BatumibizTest\\Captcha\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
