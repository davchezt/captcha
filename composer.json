{
    "name": "mobicms/captcha",
    "description": "A simple PHP CAPTCHA library",
    "type": "library",
    "homepage": "https://github.com/mobicms/captcha",
    "license": "MIT",
    "keywords": [
        "php",
        "captcha"
    ],
    "require": {
        "php": "^7.4",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\Captcha\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/resources/stubs/constants.php"
        ],
        "psr-4": {
            "MobicmsTest\\Captcha\\": "tests/testsuite/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@psalm",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm --output-format=github",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
